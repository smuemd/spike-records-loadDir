{
  "name": "spike-records-loaddir",
  "description": "helper library to add directory of data files to spike records",
  "version": "3.6.0",
  "author": "smuemd",
  "main": "lib",
  "ava": {
    "verbose": "true",
    "serial": "true"
  },
  "scripts": {
    "coverage": "nyc --reporter=html ava && open coverage/index.html",
    "coveralls": "nyc --reporter=lcov ava && cat ./coverage/lcov.info | coveralls",
    "fmt": "prettier-standard",
    "lint": "standard --verbose | snazzy",
    "precommit": "lint-staged",
    "pretest": "npm run lint -s",
    "test": "NODE_ENV=test nyc ava"
  },
  "lint-staged": {
    "linters": {
      "test/*.js": [
        "prettier-standard",
        "standard",
        "git add"
      ]
    }
  },
  "license": "ISC",
  "dependencies": {
    "glob": "^7.1.2",
    "gray-matter": "^3.0.3",
    "js-yaml": "^3.8.4",
    "slugify": "^1.1.0"
  },
  "keywords": [
    "spike",
    "static",
    "webpack",
    "helper"
  ],
  "devDependencies": {
    "ava": "^0.19.1",
    "coveralls": "^2.13.1",
    "husky": "^0.13.3",
    "lint-staged": "^3.4.2",
    "nyc": "^10.3.2",
    "snazzy": "^7.0.0",
    "standard": "^13.0.1"
  }
}
